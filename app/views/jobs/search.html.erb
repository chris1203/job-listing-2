<%= render "jobs/search_bar" %>
<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按照薪资下限排序", search_jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪资上限排序", search_jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("按照发表时间排序", search_jobs_path ) %>

        </li>
    </ul>
</div>

<div class="col-md-8 col-md-offset-2" style="margin-top: 3em;">
    <% if @jobs.present? %>
        <%= render :partial => "item", :collection => @jobs, :as => :job %>
    <% else %>
        <p>There are no jobs containing the term(s)"<%= params[:q] %>" .</p>
    <% end %>   
</div>
     
